<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.AuthentificationController"
            stylesheets="@../css/Utilisateur.css">

    <center>
        <StackPane BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" maxWidth="1000" maxHeight="600">

                <!-- Partie gauche - Image et titre -->
                <StackPane styleClass="login-left-panel"
                           prefWidth="350" HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" spacing="20">
                        <ImageView fitHeight="140" fitWidth="140"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../image/admin.png" />
                            </image>
                        </ImageView>

                        <VBox alignment="CENTER" spacing="5">
                            <Label text="Bibliothèque" styleClass="app-title"/>
                            <Label text="Universitaire" styleClass="app-title"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10">
                            <Label text="Système de Gestion"
                                   styleClass="app-subtitle"/>

                        </VBox>
                    </VBox>
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>
                </StackPane>

                <!-- Partie droite - Formulaire -->
                <StackPane styleClass="login-right-panel"
                           prefWidth="450" HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" spacing="40">
                        <Label text="Connexion" styleClass="login-title"/>

                        <VBox alignment="CENTER" spacing="25"
                              prefWidth="320" maxWidth="400">

                            <!-- Champ nom d'utilisateur -->
                            <VBox alignment="CENTER_LEFT" spacing="8"
                                  prefWidth="300">
                                <Label text="Nom d'utilisateur"
                                       styleClass="form-label"/>
                                <TextField fx:id="usernameField"
                                           promptText="Matricule ou email"
                                           styleClass="form-input"/>
                            </VBox>

                            <!-- Champ mot de passe -->
                            <VBox alignment="CENTER_LEFT" spacing="8"
                                  prefWidth="300">
                                <Label text="Mot de passe"
                                       styleClass="form-label"/>
                                <PasswordField fx:id="passwordField"
                                               promptText="Votre mot de passe"
                                               styleClass="form-input"/>
                            </VBox>

                            <!-- Boutons -->
                            <HBox alignment="CENTER" spacing="15">
                                <Button fx:id="loginButton"
                                        text="Se connecter"
                                        defaultButton="true"
                                        styleClass="btn-login"/>
                                <Button fx:id="cancelButton"
                                        text="Annuler"
                                        styleClass="btn-cancel"/>
                            </HBox>

                            <!-- Message d'erreur -->
                            <Label fx:id="errorLabel"
                                   styleClass="error-message"
                                   visible="false"
                                   wrapText="true"
                                   maxWidth="300"/>
                        </VBox>

                        <!-- Pied de page -->
                        <Label text="© 2024 Bibliothèque Universitaire"
                               styleClass="footer"/>
                    </VBox>
                    <padding>
                        <Insets top="60" right="60" bottom="60" left="60"/>
                    </padding>
                </StackPane>

            </HBox>
        </StackPane>
    </center>

</BorderPane>